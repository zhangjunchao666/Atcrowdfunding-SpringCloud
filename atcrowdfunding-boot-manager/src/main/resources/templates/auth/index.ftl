        <script type="text/javascript">
            $(function () {
			    $(".list-group-item").click(function(){
				    if ( $(this).find("ul") ) {
						$(this).toggleClass("tree-closed");
						if ( $(this).hasClass("tree-closed") ) {
							$("ul", this).hide("fast");
						} else {
							$("ul", this).show("fast");
						}
					}
				});
				
				queryPage(0);
            });
            
            
            
            
            var json = {
    			pageno:1,
    			pagesize:1
    		};
            
            //页面加载完成时，执行异步请求，查询列表数据，然后局部刷新。
            function queryPage(pageno){
            	json.pageno = pageno +1;
            	var index = -1 ;
            	$.ajax({
            		type:"post",
            		url:"${APP_PATH}/auth/queryPage",
            		data:json,
            		boforeSend:function(){
            			index = layer.load(2, {time: 10*1000});
            			return true ;
            		},
            		success:function(result){
            			layer.close(index);
            			if(result.success){
            				//获取数据，局部刷新
            				var page = result.data;
            				var list = page.datas;
            				
            				var content = '';//在js中拼串推荐使用单引号。
            				
            				$.each(list,function(i,e){
								content+='<tr>';
								content+='  <td>'+(i+1)+'</td>';
								content+='  <td>'+e.pdName+'</td>';
								content+='  <td>'+e.pdVersion+'</td>';
								content+='  <td>'+e.taskName+'</td>';
								content+='  <td>'+e.username+'</td>';
								content+='  <td>';
								content+='	  <button type="button" class="btn btn-success btn-xs" onclick="window.location.href=\'${APP_PATH}/auth/view?taskId='+e.taskId+'&memberId='+e.memberId+'\'" ><i class=" glyphicon glyphicon-eye-open"></i></button>';
								content+='	  <button type="button" class="btn btn-danger btn-xs" onclick="deleteProcDef(\''+e.deployId+'\',\''+e.pdName+'\')"><i class=" glyphicon glyphicon-remove"></i></button>';
								content+='  </td>';
								content+='</tr>';
            				});
            				
            				
            				$("tbody").html(content);
            				
            				
            				//---拼分页条-------------------------------------
            				// 创建分页
            				$("#Pagination").pagination(page.totalsize, {
            					num_edge_entries: 1, //边缘页数
            					num_display_entries: 4, //主体页数
            					callback: queryPage,
            					items_per_page:page.pagesize, //每页显示1项
            					current_page:page.pageno-1,
            					prev_text:"上一页",
            					next_text:"下一页"
            				});

            				
            			}else{
            				layer.msg("加载数据失败！", {time:1000, icon:5, shift:6});
            			}
            			
            		}
            	});
            	
            	
            }
            
            
            
 
            
            
